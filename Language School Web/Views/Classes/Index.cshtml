@model Tuple<IEnumerable<LanguageSchool.Models.ClassDataDto>,IEnumerable<LanguageSchool.Models.ClassBasicDataDto>, IEnumerable<LanguageSchool.Models.ClassBasicDataDto>,bool>

@{
    ViewBag.Title = "Classes";
}
<!-- Classes Table Card-->
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-6">
            <div class="card mb-3">
                <div class="card-body">
                    <div class="mb-0 mt-4">
                        <i class="fa fa-list-ol"></i> Top list
                    </div>
                    <hr class="mt-2">
                    <div class="mb-3">
                        <div class="card text-white bg-gold o-hidden h-100">
                            <div class="card-body">
                                <div class="card-body-icon">
                                    <i>1</i>
                                </div>
                                <div class="mr-5">@Model.Item2.First().ClassName</div>
                            </div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <div class="card text-white bg-silver o-hidden h-100">
                            <div class="card-body">
                                <div class="card-body-icon">
                                    <i>2</i>
                                </div>
                                <div class="mr-5">@Model.Item2.ElementAt(1).ClassName</div>
                            </div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <div class="card text-white bg-bronze o-hidden h-100">
                            <div class="card-body">
                                <div class="card-body-icon">
                                    <i>3</i>
                                </div>
                                <div class="mr-5">@Model.Item2.ElementAt(2).ClassName</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        @if (Model.Item3 != null && Model.Item3.Count()>0)
        {
        <div class="col-lg-6">
            <div class="card mb-3">
                <div class="card-body">
                    <div class="mb-0 mt-4">
                        <i class="fa fa-child"></i> Others also chose...
                    </div>
                    <hr class="mt-2">
                    @foreach (var item in Model.Item3)
                    {
                    <div class="mb-3">
                        <div class="card text-dark bg-white o-hidden h-100 border-primary">
                            <div class="card-body">
                                <div class="mr-5">@Html.DisplayFor(modelItem => item.ClassName)</div>
                            </div>
                        </div>
                    </div>
                    }
                </div>
            </div>
        </div>
        }
    </div>
    <div class="card mb-3">
        <div class="card-header">
            <i class="fa fa-table"></i> All classes
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Language</th>
                            <th>Level</th>
                            <th>Registration</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Name</th>
                            <th>Language</th>
                            <th>Level</th>
                            <th>Registration</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var item in Model.Item1)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ClassName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Language)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LanguageLevel)
                                </td>
                                <td>
                                    <div>
                                        @Html.DisplayFor(modelItem => item.StudentsCount)/@Html.DisplayFor(modelItem => item.StudentsMax)
                                        @if (Model.Item4)
                                        {
                                            <a class="btn btn-primary pull-right" href=@Url.Action("SignFor", "Classes", new { classId = item.Id })>
                                                <i class="fa fa-cart-plus"></i>
                                            </a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
    </div>
</div>


