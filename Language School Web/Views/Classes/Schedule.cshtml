@model IEnumerable<LanguageSchool.Models.ScheduleDay>
@{
    ViewBag.Title = "Schedule";
    Layout = null;
}

<link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:400,600" rel="stylesheet">
<!-- CSS reset -->
<link rel="stylesheet" href="~/ScheduleTemplate/css/reset.css">
<!-- Resource style -->
<link rel="stylesheet" href="~/ScheduleTemplate/css/style.css">
<div class="cd-schedule loading">
    <div class="timeline">
        <ul>
            <li><span>09:00</span></li>
            <li><span>09:30</span></li>
            <li><span>10:00</span></li>
            <li><span>10:30</span></li>
            <li><span>11:00</span></li>
            <li><span>11:30</span></li>
            <li><span>12:00</span></li>
            <li><span>12:30</span></li>
            <li><span>13:00</span></li>
            <li><span>13:30</span></li>
            <li><span>14:00</span></li>
            <li><span>14:30</span></li>
            <li><span>15:00</span></li>
            <li><span>15:30</span></li>
            <li><span>16:00</span></li>
            <li><span>16:30</span></li>
            <li><span>17:00</span></li>
            <li><span>17:30</span></li>
            <li><span>18:00</span></li>
            <li><span>18:30</span></li>
            <li><span>19:00</span></li>
            <li><span>19:30</span></li>
            <li><span>20:00</span></li>
        </ul>
    </div> <!-- .timeline -->
    <div class="events">
        <ul>
            @{int i = 1;}
            @foreach (var day in Enum.GetNames(typeof(System.DayOfWeek)))
            {
                <li class="events-group">
                    <div class="top-info"><span>@day</span></div>
                    <ul>
                        @{
                            LanguageSchool.Models.ScheduleDay scheduleDay = Model.FirstOrDefault(sd => sd.Day == day);
                        }
                        @if (scheduleDay != null)
                        {

                            foreach (var item in scheduleDay.Items)
                            {
                                <li class="single-event" data-start=@item.StartTime data-end=@item.EndTime data-event=@String.Format("event-{0}",i%4+1)>
                                    <a href="#0">
                                        <em class="event-name m-3">@item.ClassName</em>
                                    </a>
                                </li>
                                i++;
                            }
                        }
                    </ul>
                </li>
            }
        </ul>
    </div>
    <div class="event-modal">
        <header class="header">
            <div class="content">
                <span class="event-date"></span>
                <h3 class="event-name"></h3>
            </div>
            <div class="header-bg"></div>
        </header>
        <div class="body">
            <div class="event-info">
            </div>
            <div class="body-bg"></div>
        </div>
        <a href="#0" class="close">Close</a>
    </div>
    <div class="cover-layer"></div>
</div> <!-- .cd-schedule -->
<script src="~/ScheduleTemplate/js/modernizr.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.0.0/jquery.min.js"></script>
<script>
    if (!window.jQuery) document.write('<script src="~/ScheduleTemplate/js/jquery-3.0.0.min.js"><\/script>');
</script>
<script src="~/ScheduleTemplate/js/main.js"></script>
