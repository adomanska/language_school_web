@{ bool isUserLoggedIn = Request.Cookies["token"] != null; }
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <meta name="description" content="">
        <meta name="author" content="">
        <title>@ViewBag.Title</title>
        <!-- Bootstrap core CSS-->
        <link href="~/WebsiteTemplate/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
        <!-- Custom fonts for this template-->
        <link href="~/WebsiteTemplate/vendor/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
        <!-- Page level plugin CSS-->
        <link href="~/WebsiteTemplate/vendor/datatables/dataTables.bootstrap4.css" rel="stylesheet">
        <!-- Custom styles for this template-->
        <link href="~/WebsiteTemplate/css/sb-admin.css" rel="stylesheet">
        <link href='//netdna.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css' rel='stylesheet' />
    </head>
    <body class="fixed-nav sticky-footer " id="page-top">
        <!-- Navigation-->
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top" id="mainNav">
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">Language School</a>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                @if (isUserLoggedIn)
                {
                <ul class="navbar-nav navbar-sidenav" id="exampleAccordion">
                    <li class="nav-item" data-toggle="tooltip" data-placement="right" title="Home">
                        <a class="nav-link" href="@Url.Action("Index", "Home")">
                            <i class="fa fa-fw fa-home"></i>
                            <span class="nav-link-text">Home</span>
                        </a>
                    </li>
                    <li class="nav-item" data-toggle="tooltip" data-placement="right" title="Profile">
                        <a class="nav-link" href="@Url.Action("Info", "Profile")">
                            <i class="fa fa-fw fa-user"></i>
                            <span class="nav-link-text">Profile</span>
                        </a>
                    </li>
                    <li class="nav-item" data-toggle="tooltip" data-placement="right" title="Profile">
                        <a class="nav-link" href="@Url.Action("ScheduleView", "Classes")">
                            <i class="fa fa-fw fa-table"></i>
                            <span class="nav-link-text">Schedule</span>
                        </a>
                    </li>
                    <li class="nav-item" data-toggle="tooltip" data-placement="right" title="Classes">
                        <a class="nav-link" href="@Url.Action("Index", "Classes")">
                            <i class="fa fa-fw fa-graduation-cap"></i>
                            <span class="nav-link-text">Classes</span>
                        </a>
                    </li>
                    <li class="nav-item" data-toggle="tooltip" data-placement="right" title="Contact">
                        <a class="nav-link" href="@Url.Action("Contact", "Home")">
                            <i class="fa fa-fw fa-mobile-phone"></i>
                            <span class="nav-link-text">Contact</span>
                        </a>
                    </li>
                </ul>
                    <ul class="navbar-nav sidenav-toggler">
                        <li class="nav-item">
                            <a class="nav-link text-center" id="sidenavToggler">
                                <i class="fa fa-fw fa-angle-left"></i>
                            </a>
                        </li>
                    </ul>
                }
                <ul class="navbar-nav ml-auto">
                    @if (isUserLoggedIn)
                    {
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="modal" data-target="#exampleModal">
                                <i class="fa fa-fw fa-sign-out"></i>Logout
                            </a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Login","Account")">
                                <i class="fa fa-fw fa-sign-in"></i>Login
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </nav>
        @if (isUserLoggedIn)
        {
            <div class="content-wrapper">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-12">
                            @RenderBody()
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div>
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-12">
                            @RenderBody()
                        </div>
                    </div>
                </div>
            </div>
        }
        <!--Footer-->
        <footer class="width-100 sticky-footer">
            <div class="container">
                <div class="text-center">
                    <small>Copyright © Language School 2018</small>
                </div>
            </div>
        </footer>
        <!-- Scroll to Top Button-->
        <a class="scroll-to-top rounded" href="#page-top">
            <i class="fa fa-angle-up"></i>
        </a>
        <!-- Logout Modal-->
        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
                        <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">×</span>
                        </button>
                    </div>
                    <div class="modal-body">Select "Logout" below if you are ready to end your current session.</div>
                    <div class="modal-footer">
                        <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                        <a class="btn btn-primary" href="@Url.Action("LogOff", "Account")">Logout</a>
                    </div>
                </div>
            </div>
        </div>
        <!-- Bootstrap core JavaScript-->
        <script src="~/WebsiteTemplate/vendor/jquery/jquery.min.js"></script>
        <script src="~/WebsiteTemplate/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
        <!-- Core plugin JavaScript-->
        <script src="~/WebsiteTemplate/vendor/jquery-easing/jquery.easing.min.js"></script>
        <!-- Page level plugin JavaScript-->
        <script src="~/WebsiteTemplate/vendor/chart.js/Chart.min.js"></script>
        <script src="~/WebsiteTemplate/vendor/datatables/jquery.dataTables.js"></script>
        <script src="~/WebsiteTemplate/vendor/datatables/dataTables.bootstrap4.js"></script>
        <!-- Custom scripts for all pages-->
        <script src="~/WebsiteTemplate/js/sb-admin.min.js"></script>
        <script src="~/WebsiteTemplate/js/sb-admin.js"></script>
        <!-- Custom scripts for this page-->
        <script src="~/WebsiteTemplate/js/sb-admin-datatables.min.js"></script>
        <script src="~/WebsiteTemplate/js/sb-admin-charts.min.js"></script>
        <script src="~/bootstrap-validator/dist/validator.js"></script>
    </body>
</html>