@using LanguageSchool.Models;
@model StudentDataDto
@{
    ViewBag.Title = "Info";
}

@using (Html.BeginForm("Save", "Profile", FormMethod.Post))
{
    <fieldset>
        <!-- Form Name -->
        <legend>User Profile</legend>
        <!-- Text input-->
        <div class="form-group">
            <label class="col-md-4 control-label" for="textinput">Username</label>
            <div class="col-md-4">
                @*<input id="textinput" name="textinput" type="text" placeholder="user id" class="form-control input-md">*@
                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control input-md", @Value = Model.UserName.ToString(), @readonly = "readonly" })
            </div>
        </div>
        <!-- Text input-->
        <div class="form-group">
            <label class="col-md-4 control-label" for="textinput">First Name</label>
            <div class="col-md-4">
                @*<input id="textinput" name="textinput" type="text" placeholder="your first name" class="form-control input-md" required="">*@
                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control input-md", @Value = Model.FirstName.ToString() })
            </div>
        </div>
        <!-- Text input-->
        <div class="form-group">
            <label class="col-md-4 control-label" for="textinput">Last Name</label>
            <div class="col-md-4">
                @*<input id="textinput" name="textinput" type="text" placeholder="your last name" class="form-control input-md">*@
                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control input-md", @Value = Model.LastName.ToString() })

            </div>
        </div>
        <!-- Text input-->
        <div class="form-group">
            <label class="col-md-4 control-label" for="textinput">Email</label>
            <div class="col-md-4">
                @*<input id="textinput" name="textinput" type="email" placeholder="your email" class="form-control input-md">*@
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control input-md", @Value = Model.Email.ToString() })
            </div>
        </div>
        @*<!-- Text input-->
            <div class="form-group">
                <label class="col-md-4 control-label" for="textinput">Password</label>
                <div class="col-md-4">
                    <input id="textinput" name="textinput" type="text" placeholder="enter your password" class="form-control input-md">

                </div>
            </div>
            <!-- Text input-->
            <div class="form-group">
                <label class="col-md-4 control-label" for="textinput">Confirm Password</label>
                <div class="col-md-4">
                    <input id="textinput" name="textinput" type="text" placeholder="confirm password" class="form-control input-md">

                </div>
            </div>*@
        <!-- Text input-->
        <div class="form-group">
            <label class="col-md-4 control-label" for="textinput">Phone Number</label>
            <div class="col-md-4">
                @*<input id="textinput" name="textinput" type="text" placeholder="your phone number" class="form-control input-md" required="">*@
                @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control input-md", @Value = (Model.PhoneNumber == null) ? "" : Model.PhoneNumber.ToString() })
            </div>
        </div>
        <!-- Button (Double) -->
        <div class="form-group">
            <label class="col-md-4 control-label" for="btnsave">Save Changes</label>
            <div class="col-md-8">
                <button type="submit"  name="submitButton" class="btn btn-primary" style="width:150px; margin-right:20px;" value="Yes">Yes</button>
                <button type="submit" name="submitButton" class="btn btn-secondary" style="width:150px" data-dismiss="modal" value="No">No</button>
            </div>
        </div>
    </fieldset>
}
    


